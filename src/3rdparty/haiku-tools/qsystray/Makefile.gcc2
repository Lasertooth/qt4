CC=g++
SIGNATURE="application/x-vnd.QtSystrayManager_gcc2"

all: qsystray

qsystray: qsystray.o
		$(CC) -g qsystray.o -ltracker -lroot -lbe -oqsystray_gcc2
		settype -s $(SIGNATURE) ./qsystray_gcc2

qsystray.o:
		$(CC) -g -DGCC2BUILD=1 -DAPP_SIGNATURE="\"$(SIGNATURE)\"" -c qsystray.cpp

clean:
		rm -f ./*.o
		rm -f ./qsystray_gcc2

install:
		cp -f ./qsystray_gcc2 /boot/common/bin/qsystray_gcc2
